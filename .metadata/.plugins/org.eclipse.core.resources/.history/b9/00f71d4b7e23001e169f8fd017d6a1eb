package leveleditor;

import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;

public class MyMouseListener implements MouseListener
{
	Editor editor;
	
	public MyMouseListener(Editor e)
	{
		this.editor = e;
	}
	
	public void mouseClicked(MouseEvent arg0) 
	{
		
	}

	public void mouseEntered(MouseEvent arg0) 
	{
		
	}

	public void mouseExited(MouseEvent arg0) 
	{
		
	}

	public void mousePressed(MouseEvent arg0) 
	{
		editor.getGraphics().drawString("ye", 100, 100);
		editor.getGraphics().drawImage(i, 100, 100, this);
	}

	public void mouseReleased(MouseEvent arg0) 
	{
		editor.getGraphics().drawString("ye", 100, 100);
		editor.getGraphics().drawImage(img, dx1, dy1, dx2, dy2, sx1, sy1, sx2, sy2, observer)(i, 100, 100, this);
	}

}
